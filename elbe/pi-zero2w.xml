<ns0:RootFileSystem xmlns:ns0="https://www.linutronix.de/projects/Elbe"
                     xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                     created="2025-05-26T00:00:00"
                     revision="6"
                     xsi:schemaLocation="https://www.linutronix.de/projects/Elbe dbsfed.xsd">

    <initvm>
        <buildtype>amd64</buildtype>
        <mirror>
            <primary_host>deb.debian.org</primary_host>
            <primary_path>/debian</primary_path>
            <primary_proto>http</primary_proto>
            <url-list>
                <url>
                    <binary>
                        http://deb.debian.org/debian bookworm main
                    </binary>
                </url>
                <url>
                    <binary>
                        http://security.debian.org/debian-security bookworm-security main
                    </binary>
                </url>
            </url-list>
        </mirror>
	<noauth />
        <suite>bookworm</suite>
        <pkg-list>
            <pkg>openssh-server</pkg>
        </pkg-list>
        <portforwarding>
            <forward>
                <proto>tcp</proto>
                <buildenv>22</buildenv>
                <host>5022</host>
            </forward>
            <forward>
                <proto>tcp</proto>
                <buildenv>7588</buildenv>
                <host>7587</host>
            </forward>
        </portforwarding>
    </initvm>

    <project>
        <name>raspberrypi-zero2w</name>
        <version>1.0</version>
        <description>
            RootFS for Raspberry Pi Zero 2 W
        </description>
        <buildtype>armhf</buildtype>
        <mirror>
            <primary_host>deb.debian.org</primary_host>
            <primary_path>/debian</primary_path>
            <primary_proto>http</primary_proto>
            <url-list>
                <url>
                    <binary>
                        http://deb.debian.org/debian bookworm main contrib non-free-firmware
                    </binary>
                </url>
                <url>
                    <binary>
                        http://archive.raspberrypi.org/debian/ bookworm main
                    </binary>
                </url>
            </url-list>
        </mirror>
	<noauth />
        <suite>bookworm</suite>
    </project>

    <target>
        <hostname>raspi</hostname>
        <domain>linux.local</domain>
        <passwd>xyzzy</passwd>
        <console>ttyAMA0,115200</console>
        <images>
            <msdoshd>
                <name>sdcard.img</name>
                <size>1900MiB</size>
                <partition>
                    <size>256MiB</size>
                    <label>boot</label>
                    <bootable/>
                </partition>
                <partition>
                    <size>remain</size>
                    <label>rfs</label>
                </partition>
            </msdoshd>
        </images>
        <fstab>
            <bylabel>
                <label>rfs</label>
                <mountpoint>/</mountpoint>
                <fs>
                    <type>ext4</type>
                    <tune2fs>-i 0</tune2fs>
                </fs>
            </bylabel>
            <bylabel>
                <label>boot</label>
                <mountpoint>/boot</mountpoint>
                <fs>
                    <type>vfat</type>
                </fs>
            </bylabel>
        </fstab>
	<install-recommends />
        <finetuning>
            <rm>/var/cache/apt/archives/*.deb</rm>
            <rm>/etc/udev/rules.d/70-persistent-net.rules</rm>
        </finetuning>
        <pkg-list>
            <pkg>raspberrypi-kernel</pkg>
            <pkg>raspi-config</pkg>
            <pkg>libraspberrypi-bin</pkg>
            <pkg>openssh-server</pkg>
            <pkg>less</pkg>
            <pkg>bash</pkg>
            <pkg>vim</pkg>
            <pkg>wget</pkg>
            <pkg>ntp</pkg>
            <pkg>fake-hwclock</pkg>
            <pkg>git</pkg>
            <pkg>bluez</pkg>
            <pkg>bind9</pkg>
            <pkg>isc-dhcp-server</pkg>
	    <!-- AWS IoT/MQTT tools -->
    	    <pkg>python3</pkg>
    	    <pkg>python3-pip</pkg>
    	    <pkg>mosquitto-clients</pkg>
	    <!-- I2C tools & libraries for ADXL345 -->
       	    <pkg>i2c-tools</pkg>
            <pkg>python3-smbus</pkg>
        </pkg-list>
    </target>

</ns0:RootFileSystem>
